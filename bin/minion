#!/usr/bin/env bash

# minion functions
_help()
{
    echo "Daa hahaha hana dul sae aaaaaah bannnaaaaaaa"
}

PS3='bannnaaaaaaa: '
options=(
"Help"
"PHP Docs"
"Install"
"Stop"
"Quit"
)
select opt in "${options[@]}"
do
    case $opt in
        "Help")
            _help
            break
            ;;
        "PHP Docs")
            ./vendor/bin/phpdoc \
                -d src/ \
                --target ./docs/php-html \
                --cache-folder ./cache \
                --title "Retail PIP API Documentation"
            ./vendor/bin/phpdoc \
                -d src/ \
                --target ./docs/php-html \
                --cache-folder ./cache \
                --template xml
                --title "Retail PIP API Documentation"
            ./vendor/bin/phpdocmd ./docs/php-html/structure.xml ./docs/php-md
            break
            ;;
        "Install")
            echo "Installing..."
            docker build -t ubuntu/nginx .
            docker-compose up -d
            composer install
            break
            ;;
        "Stop")
            echo "Stoping..."
            docker stop $(docker ps -a -q)
            break
            ;;
        "Quit")
            break
            ;;
        *) echo invalid option;;
    esac
done

