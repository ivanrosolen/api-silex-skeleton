{
    "name": "xuplau/api-silex-skeleton",
    "description": "API Silex Skeleton",
    "homepage": "https://github.com/ivanrosolen/api-silex-skeleton",
    "require": {
        "php" : ">=7.0",
        "silex/silex": "~2.0",
        "doctrine/dbal": "v2.5.4",
        "lcobucci/jwt":"~3.1",
        "respect/validation": "1.0.4",
        "ramsey/uuid": "~3.4",
        "symfony/config": "~3.1",
        "symfony/yaml": "~3.1",
        "symfony/translation": "~3.1",
        "swiftmailer/swiftmailer": "~5.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "5.5.*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Xuplau\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xuplau\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests"
    }
}
